<% if @user.errors.any? %>
  <div class="container">
    <div class="alert alert-danger" role="alert">
        The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>